<div class="container-fluid">  
  <div class="page-header">
    <h1 align="center" style="margin-top:5%;">Welcome to Photography</h1>
  </div>
  <div style="margin-bottom:5%;">
  <%= image_tag "http://www.mintandpeachphotography.com/wp-content/uploads/2016/01/MP.png", :class=> "home_image img-responsive center-block" %>
</div>
  <div class='form-group col-md-3'> </div>
    <ul class="nav nav-tabs home_url">
      <li role="presentation" class="active"><a href="#replace_div" class="li_color">Home</a></li>
      <li role="presentation"><a href="/home/replace?value=pro" data-remote="true" class="li_color">Profile</a></li>
      <li role="presentation"><a href="/home/replace?value=pic" data-remote="true" class="li_color">Comments</a></li>
    </ul>
    <div class="form-group"> </div>
</div>

<div class="container-fluid" id="replace_div">
  <div id="myCarousel" class="col-md-8 col-md-offset-2 carousel slide" style="margin-bottom:10%;" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img src="/assets/1.jpg" alt="Chania">
      </div>

      <div class="item">
        <img src="/assets/2.jpg" alt="Chania">
      </div>

      <div class="item">
        <img src="/assets/3.jpg" alt="Flower">
      </div>

      <div class="item">
        <img src="/assets/4.jpg" alt="Flower">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>  
  </div>    
</div>
      <footer>
        <p> <a href="/"> <h4 align="center" style="color:#fff;"> Photography </h4> </a> </p>
      </footer>    


      <script>
      var selector = '.nav li';
        $(selector).on('click', function(){
            $(selector).removeClass('active');
            $(this).addClass('active');
        });
      </script>